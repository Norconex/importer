<!-- 
Config for "testPrePostScriptFilter" (from #86). 
 -->
<importer>
  <preParseHandlers>
    <handler
      class="com.norconex.importer.handler.filter.impl.ScriptFilter"
      engineName="javascript"
      onMatch="include"
    >
    <script>
      <![CDATA[
        /*return*/ true;
      ]]></script>
    </handler>
  </preParseHandlers>

  <postParseHandlers>
    <handler
      class="com.norconex.importer.handler.filter.impl.ScriptFilter"
      engineName="javascript"
      onMatch="include"
    >
    <script>
      <![CDATA[
        /*return*/ true;
      ]]></script>
    </handler>
  </postParseHandlers>
</importer>